[alias]
  a = add
  ai = add --interactive
  ap = add --patch
  b = branch
  bd = branch -D
  c = checkout --guess --quiet
  cb = checkout -b
  d = diff
  dc = diff --cached
  f = fetch
  fa = fetch --all
  fap = fetch --all --prune
  s = status --short
  do = log --decorate --oneline
  adog = log --all --decorate --oneline --graph
  adogs = log --all --decorate --oneline --graph --simplify-by-decoration
[branch]
  sort = -committerdate
[color]
  ui = auto
  status = always
[core]
  editor = hx
  eol = lf
  autocrlf = false
[diff]
  algorithm = histogram
  colorMoved = plain
  renames = copies
[pull]
  ff = only
[push]
  default = current
[rerere]
  enabled = true
